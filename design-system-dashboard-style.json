        }
      },

      "weights": {
        "light": 300,
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "extrabold": 800
      }
    },

    "spacing": {
      "philosophy": "Use 8px base unit for consistency. Generous spacing creates breathing room.",
      "baseUnit": "8px",
      
      "scale": {
        "0": "0",
        "1": "0.25rem",
        "2": "0.5rem",
        "3": "0.75rem",
        "4": "1rem",
        "5": "1.25rem",
        "6": "1.5rem",
        "8": "2rem",
        "10": "2.5rem",
        "12": "3rem",
        "16": "4rem",
        "20": "5rem",
        "24": "6rem"
      },

      "componentPadding": {
        "card": {
          "default": "1.5rem",
          "compact": "1rem",
          "spacious": "2rem",
          "description": "Internal padding for cards"
        },
        "button": {
          "default": "0.75rem 1.5rem",
          "small": "0.5rem 1rem",
          "large": "1rem 2rem",
          "description": "Padding for interactive buttons"
        },
        "input": {
          "default": "0.75rem 1rem",
          "description": "Input field padding"
        }
      },

      "gaps": {
        "cardGrid": "1.5rem",
        "componentGap": "1rem",
        "sectionGap": "2.5rem",
        "listItemGap": "0.75rem",
        "description": "Gaps between elements and sections"
      }
    },

    "borderRadius": {
      "philosophy": "Generous rounding creates softness. Use consistent scale throughout.",
      
      "scale": {
        "xs": "0.25rem",
        "sm": "0.5rem",
        "md": "0.75rem",
        "lg": "1rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "2rem",
        "full": "9999px"
      },

      "usage": {
        "card": "1rem to 1.5rem",
        "statCard": "1.25rem to 1.5rem",
        "button": "0.75rem to 1rem",
        "input": "0.75rem",
        "badge": "9999px",
        "avatar": "9999px",
        "chart": "0.5rem",
        "modal": "1.5rem",
        "sidebar": "0 (no rounding on screen edges)"
      }
    },

    "shadows": {
      "philosophy": "Soft, multi-layered shadows for subtle depth. Never harsh or dark.",
      
      "levels": {
        "xs": {
          "value": "0 1px 2px rgba(0, 0, 0, 0.04)",
          "usage": "Subtle lift for small elements"
        },
        "sm": {
          "value": "0 2px 4px rgba(0, 0, 0, 0.06), 0 1px 2px rgba(0, 0, 0, 0.03)",
          "usage": "Cards at rest, default elevation"
        },
        "md": {
          "value": "0 4px 8px rgba(0, 0, 0, 0.08), 0 2px 4px rgba(0, 0, 0, 0.04)",
          "usage": "Elevated cards, stat containers"
        },
        "lg": {
          "value": "0 8px 16px rgba(0, 0, 0, 0.1), 0 4px 8px rgba(0, 0, 0, 0.06)",
          "usage": "Modals, dropdowns, floating elements"
        },
        "xl": {
          "value": "0 16px 32px rgba(0, 0, 0, 0.12), 0 8px 16px rgba(0, 0, 0, 0.08)",
          "usage": "Major overlays, important dialogs"
        }
      },

      "colored": {
        "blue": "0 8px 16px rgba(69, 112, 212, 0.15)",
        "pink": "0 8px 16px rgba(216, 74, 143, 0.15)",
        "purple": "0 8px 16px rgba(139, 100, 232, 0.15)",
        "description": "Subtle colored shadows for branded elements"
      }
    },

    "effects": {
      "glassmorphism": {
        "description": "Frosted glass effect with blur and transparency",
        "properties": {
          "background": "rgba(255, 255, 255, 0.7)",
          "backdropFilter": "blur(20px) saturate(180%)",
          "WebkitBackdropFilter": "blur(20px) saturate(180%)",
          "border": "1px solid rgba(255, 255, 255, 0.3)",
          "boxShadow": "0 8px 32px rgba(0, 0, 0, 0.08)"
        },
        "variants": {
          "strong": {
            "background": "rgba(255, 255, 255, 0.85)",
            "backdropFilter": "blur(30px) saturate(200%)"
          },
          "subtle": {
            "background": "rgba(255, 255, 255, 0.5)",
            "backdropFilter": "blur(15px) saturate(150%)"
          }
        }
      },

      "gradients": {
        "backgroundGradient": {
          "value": "linear-gradient(135deg, #E8EBF0 0%, #F5F7FA 100%)",
          "description": "Subtle background gradient"
        },
        "cardGradient": {
          "value": "linear-gradient(135deg, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0.6) 100%)",
          "description": "Gradient overlay for cards"
        },
        "chartBar": {
          "value": "linear-gradient(180deg, [lightColor] 0%, [darkColor] 100%)",
          "description": "Top to bottom gradient for chart bars"
        }
      },

      "patterns": {
        "dots": {
          "description": "Dotted pattern overlay for visual texture",
          "implementation": "SVG or CSS pattern with small circles",
          "properties": {
            "dotSize": "2px to 3px",
            "spacing": "8px to 10px",
            "color": "rgba(255, 255, 255, 0.4)",
            "opacity": "0.6"
          },
          "usage": "Overlay on chart bars, background decorations"
        },
        "diagonalStripes": {
          "description": "Diagonal hatching pattern (45deg angle)",
          "implementation": "SVG pattern or repeating linear gradient",
          "properties": {
            "stripeWidth": "2px to 3px",
            "spacing": "6px to 8px",
            "angle": "45deg",
            "color": "rgba(255, 255, 255, 0.3)",
            "alternateColor": "transparent or rgba(0, 0, 0, 0.05)"
          },
          "usage": "Projected data, forecast bars, differentiation from actual data"
        },
        "grid": {
          "description": "Subtle grid pattern for backgrounds",
          "properties": {
            "lineWidth": "1px",
            "spacing": "40px to 60px",
            "color": "rgba(0, 0, 0, 0.02)"
          },
          "usage": "Large background areas, page backgrounds"
        }
      }
    },

    "components": {
      "statCard": {
        "description": "Card displaying key metrics with large numbers and trend indicators",
        "structure": {
          "layout": "flex-column",
          "padding": "1.5rem",
          "borderRadius": "1.25rem",
          "minHeight": "160px",
          "gap": "0.75rem"
        },
        "elements": {
          "label": {
            "typography": "body or caption",
            "color": "text-secondary",
            "position": "top or bottom"
          },
          "value": {
            "typography": "displayLarge (3rem, 700 weight)",
            "color": "text-primary",
            "lineHeight": "1.1",
            "includeSymbol": "prefix like '+' or '$'"
          },
          "trend": {
            "typography": "caption",
            "badge": {
              "background": "rgba color based on positive/negative",
              "padding": "0.25rem 0.5rem",
              "borderRadius": "full",
              "icon": "arrow up/down",
              "text": "percentage like '24%' or '30%'"
            }
          },
          "subtitle": {
            "typography": "caption",
            "color": "text-tertiary",
            "text": "'vs last week', 'vs last month'"
          }
        },
        "variants": {
          "withChart": "Include small sparkline or mini bar chart at bottom",
          "withIcon": "Icon in top right corner",
          "colored": "Use pastel background color instead of white"
        }
      },

      "chartBar": {
        "description": "Bar chart with gradient fills and optional pattern overlays",
        "structure": {
          "barWidth": "20px to 40px",
          "barGap": "8px to 16px",
          "barRadius": "0.5rem (top corners)",
          "minHeight": "20px",
          "maxHeight": "200px"
        },
        "styling": {
          "fill": "linear-gradient(180deg, lightColor 0%, darkColor 100%)",
          "patternOverlay": {
            "dots": "For actual data",
            "stripes": "For projected/forecast data"
          },
          "hover": {
            "transform": "scale(1.05)",
            "brightness": "110%"
          }
        },
        "variants": {
          "stacked": "Multiple colors stacked vertically",
          "grouped": "Multiple bars side by side per category",
          "simple": "Single color per bar"
        }
      },

      "hiringStagePipeline": {
        "description": "Horizontal stage pipeline showing progression through steps",
        "structure": {
          "layout": "table or flex grid",
          "rows": "Job positions (Web Developer, Analyst, etc.)",
          "columns": "Stages (Screening, Background check, Interviews, etc.)"
        },
        "cells": {
          "padding": "1rem to 1.5rem",
          "borderRadius": "0.75rem",
          "background": "Pastel color based on value/density",
          "value": {
            "typography": "bodyLarge (1rem, 600 weight)",
            "color": "text-primary",
            "centered": true
          },
          "colors": {
            "high": "Darker pastel (more candidates)",
            "medium": "Medium pastel",
            "low": "Light pastel (fewer candidates)",
            "scale": ["#F0F5FF", "#E0EBFF", "#C7DCFE", "#A4C4F9"]
          }
        },
        "labels": {
          "stageLabels": {
            "position": "top of columns",
            "typography": "caption",
            "color": "text-tertiary"
          },
          "jobLabels": {
            "position": "left of rows",
            "typography": "body",
            "color": "text-secondary"
          }
        }
      },

      "sidebarNavigation": {
        "description": "Left sidebar with icon-based navigation",
        "structure": {
          "width": "80px (collapsed) or 240px (expanded)",
          "background": "glassmorphic white or solid white",
          "padding": "1.5rem 1rem",
          "position": "fixed left"
        },
        "logo": {
          "position": "top",
          "size": "48px circle",
          "background": "brand color or dark",
          "marginBottom": "2rem"
        },
        "menuItems": {
          "height": "48px",
          "width": "48px (collapsed) or full (expanded)",
          "borderRadius": "0.75rem",
          "gap": "0.5rem",
          "icon": {
            "size": "24px",
            "strokeWidth": "2px",
            "color": "text-tertiary (default) or brand (active)"
          },
          "states": {
            "default": {
              "background": "transparent",
              "color": "text-tertiary"
            },
            "hover": {
              "background": "rgba(0, 0, 0, 0.04)",
              "color": "text-primary"
            },
            "active": {
              "background": "pastelBlue-50",
              "color": "pastelBlue-600"
            }
          }
        }
      },

      "search": {
        "description": "Search input field with icon",
        "structure": {
          "height": "44px",
          "padding": "0.75rem 1rem 0.75rem 2.75rem",
          "borderRadius": "0.75rem",
          "background": "rgba(255, 255, 255, 0.6)",
          "border": "1px solid rgba(229, 231, 235, 0.5)"
        },
        "icon": {
          "position": "absolute left 1rem",
          "size": "20px",
          "color": "text-tertiary"
        },
        "placeholder": {
          "text": "'Search'",
          "color": "text-quaternary",
          "fontSize": "0.875rem"
        },
        "focus": {
          "background": "rgba(255, 255, 255, 0.9)",
          "border": "1px solid pastelBlue-300",
          "boxShadow": "0 0 0 3px rgba(164, 196, 249, 0.1)"
        }
      },

      "badge": {
        "description": "Small pill-shaped indicator for trends or status",
        "structure": {
          "padding": "0.25rem 0.625rem",
          "borderRadius": "9999px",
          "typography": "caption (0.75rem, 600 weight)",
          "display": "inline-flex align-center",
          "gap": "0.25rem"
        },
        "variants": {
          "success": {
            "background": "#DBFFF0",
            "color": "#066242",
            "icon": "↑ or check"
          },
          "warning": {
            "background": "#FFF6E5",
            "color": "#92400E",
            "icon": "↓ or alert"
          },
          "neutral": {
            "background": "#F0F2F5",
            "color": "#4B5563"
          }
        }
      },

      "rightPanel": {
        "description": "Right sidebar showing platform insights or activity",
        "structure": {
          "width": "280px to 320px",
