      },

      "text": {
        "primary": {
          "value": "#1F2937",
          "description": "Main heading and important text",
          "usage": "H1, H2, primary labels, important numbers"
        },
        "secondary": {
          "value": "#4B5563",
          "description": "Body text and descriptions",
          "usage": "Paragraphs, card content, secondary labels"
        },
        "tertiary": {
          "value": "#6B7280",
          "description": "Subtle text and metadata",
          "usage": "Captions, timestamps, helper text"
        },
        "quaternary": {
          "value": "#9CA3AF",
