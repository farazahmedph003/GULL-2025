{
  "designSystem": {
    "metadata": {
      "name": "Modern Dashboard Glassmorphic Design System",
      "version": "1.0.0",
      "type": "dashboard-analytics-ui",
      "description": "A comprehensive design system extracted from modern dashboard aesthetics featuring glassmorphism, soft pastels, decorative data visualization patterns, and clean minimalist interfaces. Optimized for analytics dashboards, admin panels, and data-heavy applications.",
      "designStyle": "glassmorphism-soft-minimalist",
      "targetAudience": "Professional dashboards, analytics tools, SaaS platforms, HR systems, project management",
      "lastUpdated": "2024"
    },

    "visualStyleCharacteristics": {
      "primaryAesthetic": "glassmorphism-with-soft-pastels",
      "keyAttributes": [
        "Soft, muted pastel color palette with high sophistication",
        "Frosted glass effects with backdrop blur and transparency",
        "Decorative patterns on data visualizations (dots, diagonal stripes, hatching)",
        "Generous rounded corners (12px-24px range)",
        "Subtle multi-layered shadows for depth",
        "Gradient transitions in chart elements from light to dark tones",
        "Clean, airy whitespace with balanced density",
        "Modern sans-serif typography with clear hierarchy",
        "Icon-driven navigation with minimal text",
        "Soft borders with low contrast for subtle separation"
      ],
      "designPrinciples": [
        "Sophistication over vibrancy - use muted, professional tones",
        "Clarity through hierarchy - clear visual weight differences",
        "Decorative yet functional - patterns enhance readability",
        "Consistency in rounding - all corners follow same scale",
        "Subtle depth - never harsh shadows",
        "Breathing room - generous padding and spacing"
      ]
    },

    "colorSystem": {
      "philosophy": "Soft pastels with professional sophistication. Colors are muted, never vibrant or saturated. Each color has purpose and meaning.",
      
      "backgrounds": {
        "primary": {
          "value": "#F8F9FB",
          "description": "Main background - very light blue-gray",
          "usage": "Page background, main canvas"
        },
        "secondary": {
          "value": "#F0F2F5",
          "description": "Slightly darker than primary for subtle contrast",
          "usage": "Alternate sections, nested containers"
        },
        "gradient": {
          "value": "linear-gradient(135deg, #E8EBF0 0%, #F5F7FA 100%)",
          "description": "Subtle gradient for visual interest",
          "usage": "Large background areas, hero sections"
        }
      },

      "surfaces": {
        "card": {
          "base": "rgba(255, 255, 255, 0.7)",
          "blur": "blur(20px)",
          "border": "rgba(255, 255, 255, 0.3)",
          "description": "Glassmorphic card with frosted effect",
          "usage": "Primary cards, stat containers, content blocks"
        },
        "cardElevated": {
          "base": "rgba(255, 255, 255, 0.85)",
          "blur": "blur(30px)",
          "border": "rgba(255, 255, 255, 0.5)",
          "description": "More opaque for important content",
          "usage": "Modal dialogs, focused cards, elevated panels"
        },
        "cardSubtle": {
          "base": "rgba(255, 255, 255, 0.5)",
          "blur": "blur(15px)",
          "border": "rgba(255, 255, 255, 0.2)",
          "description": "Very subtle for background elements",
          "usage": "Sidebar backgrounds, secondary panels"
        }
      },

