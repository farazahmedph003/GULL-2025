{
  "designSystem": {
    "name": "GULL Modern Financial Dashboard",
    "version": "1.0.0",
    "description": "A clean, modern design system for financial applications with emphasis on data visualization and user-friendly interfaces (Light Mode Optimized)",
    
    "colorPalette": {
      "light": {
        "primary": {
          "main": "#3DB88F",
          "light": "#5CD4A5",
          "dark": "#2A9470",
          "gradient": "linear-gradient(135deg, #3DB88F 0%, #2A9470 100%)"
        },
        "secondary": {
          "main": "#FF6B8A",
          "light": "#FF8FA8",
          "dark": "#E55571"
        },
        "accent": {
          "teal": "#4ECDC4",
          "blue": "#5B9FED",
          "purple": "#A78BFA",
          "yellow": "#FFD93D",
          "emerald": "#10B981",
          "cyan": "#06B6D4",
          "pink": "#EC4899",
          "orange": "#F97316"
        },
        "neutral": {
          "white": "#FFFFFF",
          "background": "#F5F7FA",
          "cardBackground": "#FFFFFF",
          "lightGray": "#E8ECF0",
          "mediumGray": "#9CA3AF",
          "darkGray": "#4B5563",
          "black": "#1F2937"
        },
        "semantic": {
          "success": "#10B981",
          "warning": "#F59E0B",
          "error": "#EF4444",
          "info": "#3B82F6"
        }
      }
    },
    
    "typography": {
      "fontFamily": {
        "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "display": "Plus Jakarta Sans, Inter, sans-serif",
        "monospace": "SF Mono, Monaco, Consolas, monospace"
      },
      "fontSize": {
        "xs": "12px",
        "sm": "14px",
        "base": "16px",
        "lg": "18px",
        "xl": "20px",
        "2xl": "24px",
        "3xl": "30px",
        "4xl": "36px",
        "5xl": "48px"
      },
      "fontWeight": {
        "light": 300,
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "extrabold": 800
      }
    },
    
    "spacing": {
      "scale": "4px",
      "values": {
        "xs": "4px",
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px",
        "2xl": "48px"
      }
    },
    
    "borderRadius": {
      "sm": "8px",
      "md": "12px",
      "lg": "16px",
      "xl": "20px",
      "2xl": "24px",
      "full": "9999px"
    },
    
    "shadows": {
      "sm": "0 1px 3px 0 rgba(0, 0, 0, 0.08)",
      "md": "0 4px 12px -2px rgba(0, 0, 0, 0.12)",
      "lg": "0 10px 25px -5px rgba(0, 0, 0, 0.15)",
      "xl": "0 20px 40px -10px rgba(0, 0, 0, 0.18)",
      "card": "0 4px 20px rgba(0, 0, 0, 0.08)",
      "float": "0 8px 30px rgba(0, 0, 0, 0.12)",
      "glow": "0 0 20px rgba(61, 184, 143, 0.3)"
    },
    
    "components": {
      "card": {
        "base": {
          "backgroundColor": "#FFFFFF",
          "borderRadius": "24px",
          "padding": "24px",
          "boxShadow": "0 4px 20px rgba(0, 0, 0, 0.08)",
          "border": "1px solid #F3F4F6",
          "transition": "all 0.3s ease"
        },
        "hover": {
          "transform": "translateY(-4px)",
          "boxShadow": "0 8px 30px rgba(0, 0, 0, 0.12)"
        }
      },
      
      "statCard": {
        "base": {
          "backgroundColor": "#FFFFFF",
          "borderRadius": "20px",
          "padding": "24px",
          "boxShadow": "0 4px 20px rgba(0, 0, 0, 0.08)",
          "border": "1px solid #F3F4F6"
        },
        "leftBorder": {
          "width": "4px",
          "gradient": "linear-gradient(180deg, #3DB88F 0%, #2A9470 100%)"
        },
        "icon": {
          "size": "48px",
          "fontSize": "32px"
        },
        "label": {
          "fontSize": "14px",
          "fontWeight": 600,
          "color": "#6B7280"
        },
        "value": {
          "fontSize": "32px",
          "fontWeight": 800,
          "color": "#1F2937"
        }
      },
      
      "button": {
        "primary": {
          "background": "linear-gradient(135deg, #FF6B8A 0%, #E55571 100%)",
          "color": "#FFFFFF",
          "borderRadius": "16px",
          "padding": "14px 28px",
          "fontWeight": 600,
          "boxShadow": "0 4px 15px rgba(255, 107, 138, 0.3)",
          "hover": {
            "transform": "translateY(-2px)",
            "boxShadow": "0 6px 20px rgba(255, 107, 138, 0.4)"
          }
        },
        "secondary": {
          "background": "linear-gradient(135deg, #3DB88F 0%, #2A9470 100%)",
          "color": "#FFFFFF",
          "borderRadius": "16px",
          "padding": "14px 28px",
          "fontWeight": 600,
          "boxShadow": "0 4px 15px rgba(61, 184, 143, 0.3)"
        }
      },
      
      "chart": {
        "bar": {
          "borderRadius": "8px",
          "gap": "12px",
          "colors": ["#3DB88F", "#5CD4A5", "#4ECDC4", "#5B9FED"],
          "gradient": true
        },
        "line": {
          "lineWidth": "3px",
          "smooth": true,
          "gradient": {
            "start": "#3DB88F",
            "end": "#5CD4A5",
            "opacity": 0.1
          }
        },
        "donut": {
          "thickness": "24px",
          "colors": ["#3DB88F", "#FF6B8A", "#5B9FED", "#FFD93D"],
          "centerText": {
            "fontSize": "28px",
            "fontWeight": 800
          }
        }
      }
    },
    
    "designPrinciples": [
      "Use generous white space for breathing room",
      "Apply soft shadows for depth",
      "Use rounded corners (16-24px) consistently",
      "Employ gradients sparingly for emphasis",
      "Maintain clear visual hierarchy",
      "Use color-coded information (green=positive, red=negative)",
      "Ensure high contrast for readability",
      "Add smooth transitions (300ms) for interactions"
    ]
  }
}

